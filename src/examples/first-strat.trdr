strategy
  name "First Strategy"
  description "Simple moving average crossover strategy"
  entry
    all_of
      any_of
        MA20 > MA50
        MA20 > MA100
      any_of
        RSI < 30
        VOLUME > 1000000
      PORTFOLIO_EXPOSURE < 0.25
      OPEN_POSITIONS < 5
      AVAILABLE_CASH > 1000
      STOCK_VALUE > 100
  
  exit
    PRICE > (ENTRY * 1.06)
    MA20 < MA50
    PRICE < (ENTRY * 0.98)
  
  sizing
    PORTFOLIO_PERCENT == 0.05
    
